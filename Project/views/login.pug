html 
    head 
        title Login

body 
    include header


    div#main

        if(user)
            h3 You are already logged in! 
    
        if(!user)
            h3 Login 
            form(action="/login", method="post")
                p="Username: "
                    input(type="text", name="username")
                    br
                p="Password: "
                    input(type="password", name="password")
                    br
                button(type="submit") Login
            if(loginattempt)
                h5 LOGIN ATTEMPT FAILED: Either no account exists or the password is incorrect.
